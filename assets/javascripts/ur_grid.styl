
@keyframes borderBlink {    
    from, to {    
        border-color pink    
    }    
    50% {    
        border-color red
        opacity 0.5
    }    
}

.ur_grid
  borderWidth = 1px
  border-collapse separate
  padding 10px
  // position absolute
  // top 50px
  // left 50%
  // transform translate(-50%, 0)
  td
    color white
    border borderWidth solid black
    position relative
    width (tokenSize + 2 * tokenPaddingSize)px
    height (tokenSize + 2 * tokenPaddingSize)px
    &.flashing
      animation: borderBlink 1s step-end infinite
  .cell
    background-color black
    box-shadow: 5px 5px 5px 0px #333;
  .starter, .ender
    background-color transparent
    border-color transparent
  .available
    cursor pointer
    .token
      cursor pointer
    
  .is_edge_l
    border-left   borderWidth solid black
  .is_edge_r
    border-right  borderWidth solid black
  .is_edge_t
    border-top    borderWidth solid black
  .is_edge_b
    border-bottom borderWidth solid black
  ur_grid_cell_layer(padding = 0)
    position absolute
    top (padding)px
    left (padding)px
    width (tokenSize + 2 * (tokenPaddingSize - padding))px
    height (tokenSize + 2 * (tokenPaddingSize - padding))px
  .token
    ur_grid_cell_layer(tokenPaddingSize)
    text-align center
    line-height tokenSize
    vertical-align middle
    font-weight bolder
    border-radius 50%
  .path
    ur_grid_cell_layer()
    background-size 100% 100%
    background-repeat no-repeat
    opacity 0.5
  .risk
    ur_grid_cell_layer()
    display none
    body.showRisk &
      display block
  .positionHint
    ur_grid_cell_layer()
    color white
    vertical-align baseline
    line-height (tokenSize + 2 * tokenPaddingSize)px
    font-size (tokenSize)px
    opacity 0
    transition opacity 500ms ease-in-out
    .flashPositionHint &
      opacity 1
    
  .has_blue .token, .has_red .token
      box-shadow: inset 3px 3px 5px 0px white, inset -1px -1px 5px 0px black, 3px 3px 5px 0px #444;
  .has_blue
    .token
      background-color #11c
  .has_red
    .token
      background-color #c11

