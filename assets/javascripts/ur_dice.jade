.ur_dice
  .not_your_turn
  //-Waiting for other player...
  .total
  - var midY = 66;
  - var i = 0;
  while i < Ur.DiceCount
    svg.dice(class="dice_#{i++}" viewBox="-10 -10 120 120" xmlns="http://www.w3.org/2000/svg")
      polygon(points="50,0 100,100, 50,#{midY}")
      polygon(points="50,0 50,#{midY} 0,100")
      polygon(points="0,100 50,#{midY} 100,100")

      //- +      0    |    2    |    4
      //-   ----------|---------|--------
      //-   | 0       | 2       | 4
      //-   |    x    |    .    |    x  
      //- 0 |    .    |    .    |    .  
      //-   |  .   x  |  x   x  |  x   .
      //-    >---------------------------
      //-   | 1       | 3       | 5
      //-   |    x    |    .    |    .  
      //- 1 |    x    |    x    |    x  
      //-   |  .   .  |  .   x  |  x   .
      circle.dice_marker_1.dice_marker_3.dice_marker_5(cx=50  cy=midY r=10)
      circle.dice_marker_0.dice_marker_1.dice_marker_4(cx=50  cy=0    r=10)
      circle.dice_marker_0.dice_marker_2.dice_marker_3(cx=100 cy=100  r=10)
      circle.dice_marker_2.dice_marker_4.dice_marker_5(cx=0   cy=100  r=10)
